{% extends 'layouts/base.html.twig' %}

{% block title pin.title %}

{% block body %}
<div class="row">
  <div class="col-md-6 mx-auto">
    <article class="pin bg-white rounded shadow">
      <div class="mw-100 rounded-top overflow-hidden">
          <a href="{{ path('app_pins_show',{id: pin.id}) }}"><img class="w-100 h-100 "
                  src=" {{(pin.imageName ? vich_uploader_asset(pin) : asset('build/images/image-placeholder.jpg')) | imagine_filter('squared_thumbnail_medium')}} "
                  alt=" {{ pin.title}}" /> </a>
      </div>
      <h2 class=' pl-3 pt-3 h5 ' > <a class=" text-muted text-decoration-none text-secondary" href="{{ path('app_pins_show',{id: pin.id}) }}">{{pin.title}}</a></h2>
      <p class=" pl-3 pb-3 text-muted"> 
        <small>Submited 
              <time datetime="{{pin.createdAt|date('Y-m-d H:i:s')}}">{{pin.createdAt|ago}}</time>  by  [OWNER FULL NAME]
        </small>
      </p>
      <p class="pb-3 pl-3">{{pin.description}}</p>
      <div class="pb-3 pl-3">
        <a href="{{path('app_pins_edit',{id: pin.id})}}" class="btn btn-light">Edit </a>
        
        <a class="btn btn-light" href="#" onclick="event.preventDefault();confirm('Are you sure ?') && document.getElementById('js-pin-delete-form').submit(); ">Delete</a>
        
        <form id="js-pin-delete-form" action="{{path('app_pins_delete',{id: pin.id})}}" method="post" style="display:none;">
          <input type="text" name="csrf_token" value="{{ csrf_token('pin.deletion_'~ pin.id) }}">
          <input type="hidden" name="_method" value="DELETE">
        </form>

      </div>
    </article> 
   

  </div>
</div>



{% endblock %}